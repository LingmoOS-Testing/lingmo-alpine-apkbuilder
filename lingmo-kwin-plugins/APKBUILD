# Maintainer: Intro <intro-iu@outlook.com>
pkgname=lingmo-kwin-plugins
arch="x86_64"
depends="/home/runner/rootfs/alpine-latest-x86_64/home/runner/packages/lingmo-alpine-apkbuilder/x86_64/lingmo-kwin-1.0.0-r0.apk"
depends_dev=""
pkgdesc="KWin plugin for LingmoOS, which is a necessary component of LingmoOS."
pkgrel=0
pkgver=1.0.0
makedepends=""
url="https://lingmo.org"
license="GPL"
source="https://github.com/Intro-iu/$pkgname/releases/download/v$pkgver/$pkgname.tar.xz"

build() {
    echo "Compiling $pkgname"
    mkdir -pv "$srcdir/$pkgname/build" && cd "$srcdir/$pkgname/build"
    cmake -DCMAKE_INSTALL_PREFIX=/usr ..
    make || return 1
}

package() {
    mkdir -pv "$pkgdir"
    cd "$srcdir/$pkgname/build"
    make DESTDIR="$pkgdir" install
}
