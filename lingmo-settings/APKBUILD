pkgname=lingmo-settings
arch="x86_64"
depends="
    icu-dev
    kconfig5-dev
    modemmanager-qt5-dev 
    networkmanager-qt5-dev 
    qt5-qtbase-dev
    qt5-qtquickcontrols2-dev
    qt5-qtx11extras-dev
    qt5-qttools-dev
    
    
cups-dev
dbus-dev
double-conversion-dev
eudev-dev
fontconfig-dev
freetype-dev
glib-dev
gtk+3.0-dev
harfbuzz-dev
icu-dev
libb2-dev
libinput-dev
libjpeg-turbo-dev
libpng-dev
libpq-dev
libproxy-dev
libstdc++
libxkbcommon-dev
mariadb-dev
mesa-dev
musl
openssl-dev
pcre2-dev
pkgconf
qt6-qtbase
qt6-qtbase-mysql
qt6-qtbase-odbc
qt6-qtbase-postgresql
qt6-qtbase-sqlite
