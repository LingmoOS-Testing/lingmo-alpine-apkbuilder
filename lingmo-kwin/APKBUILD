# Maintainer: Intro <intro-iu@outlook.com>
pkgname=lingmo-kwin
arch="x86_64"
depends="
    plasma-framework5-dev
    knewstuff5-dev
    libxcvt-dev
    kidletime5-dev
    kcmutils5-dev
    kpipewire-dev
    kdecoration-dev
    kscreenlocker-dev
    lcms2-dev
    libqtxdg-dev libdbusmenu-qt-dev syntax-highlighting5-dev
"
depends_dev=""
pkgdesc="KWin is an Window Manager for Xorg windowing systems (Wayland, X11) on Linux."
pkgrel=0
pkgver=1.0.0
makedepends=""
url="https://lingmo.org"
license="GPL"
source="https://github.com/Intro-iu/$pkgname/releases/download/v$pkgver/$pkgname.tar.xz"

build() {
    echo "Compiling $pkgname"
    mkdir -pv "$srcdir/$pkgname/build" && cd "$srcdir/$pkgname/build"
    cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib ..
    make -j4 || return 1
}

package() {
    mkdir -pv "$pkgdir"
    cd "$srcdir/$pkgname/build"
    make DESTDIR="$pkgdir" install
}
