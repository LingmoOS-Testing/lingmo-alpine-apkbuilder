# Maintainer: Intro <intro-iu@outlook.com>
pkgname=lingmo-filemanager
arch="x86_64"
depends=""
depends_dev=""
pkgdesc="Lingmo File Manager, simple to use, beautiful, and retain the classic PC interactive design."
pkgrel=0
pkgver=1.0.0
makedepends=""
url="https://lingmo.org"
license="GPL"
source="https://github.com/Intro-iu/lingmo-filemanager/releases/download/v$pkgver/lingmo-filemanager.tar.xz"

build() {
    echo "Compiling $pkgname"
    mkdir -pv "$srcdir/$pkgname/build" && cd "$srcdir/$pkgname/build"
    cmake -DCMAKE_INSTALL_PREFIX=/usr ..
    make || return 1
}

package() {
    mkdir -pv "$pkgdir"
    cd "$srcdir/$pkgname/build"
    make DESTDIR="$pkgdir" install
}
