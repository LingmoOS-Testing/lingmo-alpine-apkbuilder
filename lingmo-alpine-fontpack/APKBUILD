# Maintainer: Intro <intro-iu@outlook.com>
pkgname=lingmo-alpine-fontpack
arch="all"
depends=""
depends_dev=""
pkgdesc="Some common fonts for Lingmo-Alpine"
pkgrel=0
pkgver=0.1.0
makedepends=""

url="https://lingmo.org"
license="GPL"
source="https://github.com/LingmoOS-Testing/lingmo-alpine-fontpack/releases/download/v$pkgver/source.tar.xz"

build() {
	echo "Compiling $pkgname"
    mkdir -pv "$srcdir/$pkgname/build" && cd "$srcdir/$pkgname/build"
    cmake ..
    make || return 1
}

package() {
    mkdir -pv "$pkgdir"
    cd "$srcdir/$pkgname/build"
    make DESTDIR="$pkgdir" install
}